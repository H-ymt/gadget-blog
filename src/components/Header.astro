---
import { Image } from 'astro:assets'
import Menu from './Menu.astro'
---

<header class="header">
  <div class="header__inner">
    <div class="headerMenu">
      <Image src="/favicon.svg" width="32" height="32" alt="logo" />
      <Menu />
    </div>
    <div class="headerSearch">
      <span>🔍</span>
    </div>
  </div>
</header>

<style lang="scss">
  .header {
    padding-inline: 20px;
  }

  .header__inner {
    display: flex;
    align-items: center;
    justify-content: space-between;
    max-width: 800px;
    margin-inline: auto;
    height: 70px;
  }

  .headerMenu {
    display: flex;
    gap: 12px;
  }

  .headerSearch {
  }
</style>
