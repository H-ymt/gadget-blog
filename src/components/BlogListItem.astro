---
import { Image } from 'astro:assets'
import { newtClient } from '../lib/newt'
import type { Article } from '../lib/newt'

const { items: articles } = await newtClient.getContents<Article>({
  appUid: 'blog',
  modelUid: 'article',
  query: {
    select: ['title', 'slug', 'body', 'coverImage', 'tags']
  }
})
---

{
  articles.map((article) => {
    return (
      <li class="blogList__item">
        <a href={`/blogs/${article.slug}`}>
          <Image
            src={article.coverImage.src}
            alt="Blog thumbnail"
            width={338}
            height={253}
            class="blogList__image"
            data-pagefind-meta="image[src],image_alt[alt]"
          />
          <h3 class="blogList__title">{article.title}</h3>
          <div>
            {article.tags?.map((tag) => (
              <span class="blogList__tag">{tag.name}</span>
            ))}
          </div>
        </a>
      </li>
    )
  })
}

<style lang="scss">
  .blogList__item {
    list-style-type: none;
  }

  .blogList__item a {
    text-decoration: none;
  }

  .blogList__image {
    object-fit: cover;
    box-shadow: 0px 0px 16px -7px var(--color-shadow);
    border-radius: var(--radius);
    height: auto;
    aspect-ratio: 4 / 2.5;
    filter: brightness(1.15);
  }

  .blogList__title {
    padding-top: 8px;
    padding-left: 4px;
    font-weight: 500;
    font-size: 18px;
  }

  .blogList__tag {
    display: inline-block;
    margin-top: 6px;
    margin-left: 4px;
    padding: 2px 8px;
    // border-radius: var(--radius-sm);
    font-size: 12px;
    color: var(--color-primary-foreground);
    background: var(--color-primary-background);
  }
</style>
