---
import { Image } from 'astro:assets'
import { newtClient } from '../lib/newt'
import type { Article } from '../lib/newt'

const { items: articles } = await newtClient.getContents<Article>({
  appUid: 'blog',
  modelUid: 'article',
  query: {
    select: ['title', 'slug', 'body', 'coverImage', 'tags']
  }
})
---

{
  articles.map((article) => {
    return (
      <li class="blogList__item">
        <a href={`/blogs/${article.slug}`}>
          <Image
            src={article.coverImage.src}
            alt="Blog thumbnail"
            width={400}
            height={300}
            class="blogList__image"
            format="webp"
          />
          <p class="blogList__title">{article.title}</p>
        </a>
      </li>
    )
  })
}

<style lang="scss">
  .blogList__item {
    list-style-type: none;
  }

  .blogList__item a {
    text-decoration: none;
  }

  .blogList__image {
    object-fit: cover;
    border-radius: var(--radius);
    width: 100%;
    max-width: 400px;
    height: auto;
    aspect-ratio: 4 / 3;

    @include mq(md) {
    }
  }

  .blogList__title {
    padding-top: 8px;
    padding-left: 4px;
    font-weight: 500;
    font-size: 16px;
  }
</style>
